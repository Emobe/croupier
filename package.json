{
  "name": "croupier",
  "description": "A library written in Typescript to create and handle a deck of cards",
  "version": "2.0.1",
  "author": "Anthony Shuker <anthony@emobe.uk>",
  "homepage": "https://github.com/Emobe/croupier",
  "keywords": [
    "playing cards",
    "typescript",
    "dealer"
  ],
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "ts-node node_modules/tape/bin/tape tests/**/*",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "files": [
    "./src/**",
    "./dist/**"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Emobe/croupier"
  },
  "engines": {
    "node": ">=14 <=19"
  },
  "bugs": {
    "url": "https://github.com/Emobe/croupier/issues",
    "email": "anthony@emobe.uk"
  },
  "devDependencies": {
    "@types/node": "^13.13.0",
    "@types/tape": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "sinon": "^9.0.2",
    "tape": "^4.13.2",
    "ts-node": "^8.8.2",
    "typescript": "^4.9.4"
  }
}
